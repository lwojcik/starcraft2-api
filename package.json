{
  "name": "starcraft2-api",
  "version": "1.5.2",
  "description": "Flexible and feature-rich library for StarCraft II Community and Game Data APIs",
  "homepage": "https://starcraft2-api.lukem.net",
  "main": "./dist/index.js",
  "module": "dist/index.mjs",
  "browser": "dist/index.umd.js",
