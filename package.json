  "author": {
    "name": "Łukasz Wójcik",
    "url": "https://www.lukem.net/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/lukemnet/starcraft2-api.git"
  },
  "bugs": {
    "url": "https://github.com/lukemnet/starcraft2-api/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/lukemnet/starcraft2-api/blob/master/LICENSE"
    }
  ],
  "scripts": {
    "test": "jest",
    "clearTestCache": "jest --clearCache",
    "clean": "rimraf dist/*",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint . --ext .ts",
    "compile": "rollup -c",
    "build": "npm run lint && npm run test && npm run clean && npm run compile",
    "dev": "tsc -w --project tsconfig.json",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "blizzapi": "^2.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
